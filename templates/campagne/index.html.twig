    <div class="logo-widget-group">
      <img src="{{ asset('assets/images/OMS-logo.png') }}" alt="logo OMS">
      <a href="{{ path('solidaire') }}">
        <div class="widget-1 mobile-screen">
          <img src="{{ asset('assets/images/mask.png') }}" alt="masque covid">
          <h2>Je suis solidaire contre la COVID</h2>
          <i class="fa fa-arrow-right"></i>
        </div>
      </a>
    </div>
    <h3>Vaccins et vaccination : quâ€™est-ce que la vaccination ?</h3>
    <div class="question-container">
      {% for question in questions %}
        <div class="question-group">
          <h4>
            {{ question.question }}
            <i class="fa fa-plus-square-o"></i>
            <i class="fa fa-minus-square"></i>
          </h4>
          <p>{{ question.answer }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
