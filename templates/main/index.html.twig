{% extends 'base.html.twig' %}


{% block body %}
  <div class="main-container d-flex">
    <div class="actu-container">
      {% for post in posts %}
        <div class="card-actu">
          <div class="card-actu-img" style="background-image: url({{ asset(post.imgPath) }});"></div>
          <div class="card-actu-body">
            <h4 class="card-actu-category">{{ post.category }}</h4>
            <h3 class="card-actu-title">{{ post.title }}</h3>
            <p class="card-actu-content">{{ post.content|u.truncate(300, '...', false) }}</p>
            <p class="card-actu-time"><i class="fa fa-clock-o"></i>le {{ post.createdAt|date('d/m/Y') }} à {{ post.createdAt|date('h:i') }}</p>
            <div class="card-actu-footer">
              <span>
                <i class="fa fa-thumbs-up"></i>{{ post.likes }}
                <i class="fa fa-comments"></i>{{ post.comments }}
              </span>
              <span>
                <i class="fa fa-arrow-right"></i>
              </span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class="widget-container">
      <div class="widget-1">
        <img src="{{ asset('assets/images/mask.png') }}" alt="masque covid">
        <h2>Je suis solidaire contre la COVID</h2>
        <i class="fa fa-arrow-right"></i>
      </div>
